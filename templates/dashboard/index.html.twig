{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
    <div class="container" >
        <div class="row">
        {% for personaje in personajes %}
            <div class="col-3">
                <div class="card " >
                    <img src="{{ asset("media/"~personaje.foto) }}" class="card-img-top" alt="..." height="190px">
                    <div class="card-body">
                        <h5 class="card-title">{{ personaje.nombre }}</h5>
                        <p class="card-text">{{ personaje.historia|u.truncate(180, '...') }}</p>
                        <a href="{{ path('personajeunico_view',{id:personaje.id}) }}" class="btn btn-primary">Seleccionar</a>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>

{% endblock %}
